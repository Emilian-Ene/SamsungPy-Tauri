{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Samsung MCD",
  "version": "1.0.3",
  "identifier": "com.ionut.samsungmdctauri",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Samsung Hybrid Control",
        "width": 1100,
        "height": 820,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../py/bridge.py",
      "../py/web_backend.py",
      "../py/export_cli_catalog.py"
    ],
    "icon": ["icons/icon.ico", "icons/icon.png"]
  }
}
